{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SqsRead",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueUrl",
        "sqs:GetQueueAttributes",
        "sqs:ChangeMessageVisibility"
      ],
      "Resource": "${TRANSACTIONS_QUEUE_ARN}"
    },
    {
      "Sid": "SqsWrite",
      "Effect": "Allow",
      "Action": ["sqs:SendMessage"],
      "Resource": "${DECISIONS_QUEUE_ARN}"
    },
    {
      "Sid": "DynamoOutbox",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:GetItem",
        "dynamodb:Query"
      ],
      "Resource": [
        "${OUTBOX_TABLE_ARN}",
        "${OUTBOX_TABLE_ARN}/index/*"
      ]
    }
  ]
}
